<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= titulo %></title>
    <link rel="stylesheet" href="/css/admin.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body>
    <nav class="navbar">
        <div class="nav-container">
            <div class="nav-brand">
                <i class="fas fa-book"></i>
                <h1>Lenny Admin</h1>
            </div>
            <ul class="nav-menu">
                <li><a href="/admin/dashboard" class="nav-link"><i class="fas fa-home"></i> Dashboard</a></li>
                <li><a href="/admin/ventas" class="nav-link"><i class="fas fa-shopping-cart"></i> Ventas</a></li>
                <li><a href="/admin/login" class="nav-link"><i class="fas fa-sign-out-alt"></i> Salir</a></li>
            </ul>
        </div>
    </nav>

    <main class="main-content">
        <div class="container">
            <div class="page-header">
                <h2>
                    <i class="fas fa-book"></i> 
                    <%= accion === 'crear' ? 'Nuevo Libro' : 'Editar Libro' %>
                </h2>
                <a href="/admin/dashboard" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Volver
                </a>
            </div>

            <div class="form-container">
                <form id="formLibro" enctype="multipart/form-data">
                    <div class="form-row">
                        <div class="form-group">
                            <label for="titulo">
                                <i class="fas fa-heading"></i> Título *
                            </label>
                            <input 
                                type="text" 
                                id="titulo" 
                                name="titulo" 
                                value="<%= libro ? libro.titulo : '' %>"
                                required
                            >
                        </div>

                        <div class="form-group">
                            <label for="autor">
                                <i class="fas fa-user"></i> Autor *
                            </label>
                            <input 
                                type="text" 
                                id="autor" 
                                name="autor" 
                                value="<%= libro ? libro.autor : '' %>"
                                required
                            >
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="descripcion">
                            <i class="fas fa-align-left"></i> Descripción
                        </label>
                        <textarea 
                            id="descripcion" 
                            name="descripcion" 
                            rows="4"
                        ><%= libro ? libro.descripcion : '' %></textarea>
                    </div>

                    <div class="form-row">
                        <div class="form-group">
                            <label for="genero">
                                <i class="fas fa-tag"></i> Género *
                            </label>
                            <input 
                                type="text" 
                                id="genero" 
                                name="genero" 
                                value="<%= libro ? libro.genero : '' %>"
                                placeholder="Ej: Fantasía, Ciencia Ficción"
                                required
                            >
                        </div>

                        <div class="form-group">
                            <label for="numeroPaginas">
                                <i class="fas fa-file-alt"></i> Número de Páginas *
                            </label>
                            <input 
                                type="number" 
                                id="numeroPaginas" 
                                name="numeroPaginas" 
                                value="<%= libro ? libro.numeroPaginas : '' %>"
                                min="1"
                                required
                            >
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group">
                            <label for="editorial">
                                <i class="fas fa-building"></i> Editorial
                            </label>
                            <input 
                                type="text" 
                                id="editorial" 
                                name="editorial" 
                                value="<%= libro ? libro.editorial : '' %>"
                            >
                        </div>

                        <div class="form-group">
                            <label for="anioPublicacion">
                                <i class="fas fa-calendar"></i> Año de Publicación
                            </label>
                            <input 
                                type="number" 
                                id="anioPublicacion" 
                                name="anioPublicacion" 
                                value="<%= libro ? libro.anioPublicacion : '' %>"
                                min="1000"
                                max="<%= new Date().getFullYear() %>"
                            >
                        </div>

                        <div class="form-group">
                            <label for="isbn">
                                <i class="fas fa-barcode"></i> ISBN
                            </label>
                            <input 
                                type="text" 
                                id="isbn" 
                                name="isbn" 
                                value="<%= libro ? libro.isbn : '' %>"
                            >
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group">
                            <label for="precio">
                                <i class="fas fa-dollar-sign"></i> Precio *
                            </label>
                            <input 
                                type="number" 
                                id="precio" 
                                name="precio" 
                                value="<%= libro ? libro.precio : '' %>"
                                step="0.01"
                                min="0"
                                required
                            >
                        </div>

                        <div class="form-group">
                            <label for="stock">
                                <i class="fas fa-boxes"></i> Stock *
                            </label>
                            <input 
                                type="number" 
                                id="stock" 
                                name="stock" 
                                value="<%= libro ? libro.stock : 0 %>"
                                min="0"
                                required
                            >
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="imagen">
                            <i class="fas fa-image"></i> Imagen
                        </label>
                        <input 
                            type="file" 
                            id="imagen" 
                            name="imagen" 
                            accept="image/*"
                        >
                        <% if (libro && libro.imagen) { %>
                            <div class="preview-image">
                                <img src="<%= libro.imagen %>" alt="Preview">
                            </div>
                        <% } %>
                    </div>

                    <div class="form-actions">
                        <button type="submit" class="btn btn-success">
                            <i class="fas fa-save"></i> Guardar
                        </button>
                        <a href="/admin/dashboard" class="btn btn-secondary">
                            <i class="fas fa-times"></i> Cancelar
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </main>

    <footer class="footer">
        <p>Lenny - Sistema de gestión de Libros y Juegos de Mesa © 2025</p>
        <p>Desarrollado por: Uriel Marles y Nicanor Gatti</p>
    </footer>

    <script>
        const accion = '<%= accion %>';
        const libroId = '<%= libro ? libro.id : null %>';
        
        document.getElementById('formLibro').addEventListener('submit', async function(e) {
            e.preventDefault();
            
            const formData = new FormData(this);
            const url = accion === 'crear' ? '/api/libros' : `/api/libros/${libroId}`;
            const method = accion === 'crear' ? 'POST' : 'PUT';
            
            try {
                const response = await fetch(url, {
                    method: method,
                    body: formData
                });
                
                if (response.ok) {
                    alert('Libro guardado exitosamente');
                    window.location.href = '/admin/dashboard';
                } else {
                    const error = await response.json();
                    alert('Error: ' + error.error);
                }
            } catch (error) {
                alert('Error al guardar el libro');
                console.error(error);
            }
        });
    </script>
</body>
</html>