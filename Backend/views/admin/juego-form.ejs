<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= titulo %></title>
    <link rel="stylesheet" href="/css/admin.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body>
    <nav class="navbar">
        <div class="nav-container">
            <div class="nav-brand">
                <i class="fas fa-book"></i>
                <h1>Lenny Admin</h1>
            </div>
            <ul class="nav-menu">
                <li><a href="/admin/dashboard" class="nav-link"><i class="fas fa-home"></i> Dashboard</a></li>
                <li><a href="/admin/ventas" class="nav-link"><i class="fas fa-shopping-cart"></i> Ventas</a></li>
                <li><a href="/admin/login" class="nav-link"><i class="fas fa-sign-out-alt"></i> Salir</a></li>
            </ul>
        </div>
    </nav>

    <main class="main-content">
        <div class="container">
            <div class="page-header">
                <h2>
                    <i class="fas fa-dice"></i> 
                    <%= accion === 'crear' ? 'Nuevo Juego de Mesa' : 'Editar Juego de Mesa' %>
                </h2>
                <a href="/admin/dashboard" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Volver
                </a>
            </div>

            <div class="form-container">
                <form id="formJuego" enctype="multipart/form-data">
                    <div class="form-row">
                        <div class="form-group">
                            <label for="nombre">
                                <i class="fas fa-heading"></i> Nombre *
                            </label>
                            <input 
                                type="text" 
                                id="nombre" 
                                name="nombre" 
                                value="<%= juego ? juego.nombre : '' %>"
                                required
                            >
                        </div>

                        <div class="form-group">
                            <label for="categoria">
                                <i class="fas fa-tag"></i> Categoría *
                            </label>
                            <input 
                                type="text" 
                                id="categoria" 
                                name="categoria" 
                                value="<%= juego ? juego.categoria : '' %>"
                                placeholder="Ej: Estrategia, Familiar"
                                required
                            >
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="descripcion">
                            <i class="fas fa-align-left"></i> Descripción
                        </label>
                        <textarea 
                            id="descripcion" 
                            name="descripcion" 
                            rows="4"
                        ><%= juego ? juego.descripcion : '' %></textarea>
                    </div>

                    <div class="form-row">
                        <div class="form-group">
                            <label for="complejidad">
                                <i class="fas fa-brain"></i> Complejidad *
                            </label>
                            <select id="complejidad" name="complejidad" required>
                                <option value="">Seleccionar...</option>
                                <option value="Baja" <%= juego && juego.complejidad === 'Baja' ? 'selected' : '' %>>Baja</option>
                                <option value="Media" <%= juego && juego.complejidad === 'Media' ? 'selected' : '' %>>Media</option>
                                <option value="Alta" <%= juego && juego.complejidad === 'Alta' ? 'selected' : '' %>>Alta</option>
                            </select>
                        </div>

                        <div class="form-group">
                            <label for="duracionMinutos">
                                <i class="fas fa-clock"></i> Duración (minutos) *
                            </label>
                            <input 
                                type="number" 
                                id="duracionMinutos" 
                                name="duracionMinutos" 
                                value="<%= juego ? juego.duracionMinutos : '' %>"
                                min="1"
                                required
                            >
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group">
                            <label for="minJugadores">
                                <i class="fas fa-users"></i> Mínimo de Jugadores *
                            </label>
                            <input 
                                type="number" 
                                id="minJugadores" 
                                name="minJugadores" 
                                value="<%= juego ? juego.minJugadores : '' %>"
                                min="1"
                                required
                            >
                        </div>

                        <div class="form-group">
                            <label for="maxJugadores">
                                <i class="fas fa-users"></i> Máximo de Jugadores *
                            </label>
                            <input 
                                type="number" 
                                id="maxJugadores" 
                                name="maxJugadores" 
                                value="<%= juego ? juego.maxJugadores : '' %>"
                                min="1"
                                required
                            >
                        </div>

                        <div class="form-group">
                            <label for="edadMinima">
                                <i class="fas fa-child"></i> Edad Mínima *
                            </label>
                            <input 
                                type="number" 
                                id="edadMinima" 
                                name="edadMinima" 
                                value="<%= juego ? juego.edadMinima : '' %>"
                                min="1"
                                required
                            >
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group">
                            <label for="editorial">
                                <i class="fas fa-building"></i> Editorial
                            </label>
                            <input 
                                type="text" 
                                id="editorial" 
                                name="editorial" 
                                value="<%= juego ? juego.editorial : '' %>"
                            >
                        </div>

                        <div class="form-group">
                            <label for="anioPublicacion">
                                <i class="fas fa-calendar"></i> Año de Publicación
                            </label>
                            <input 
                                type="number" 
                                id="anioPublicacion" 
                                name="anioPublicacion" 
                                value="<%= juego ? juego.anioPublicacion : '' %>"
                                min="1000"
                                max="<%= new Date().getFullYear() %>"
                            >
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group">
                            <label for="precio">
                                <i class="fas fa-dollar-sign"></i> Precio *
                            </label>
                            <input 
                                type="number" 
                                id="precio" 
                                name="precio" 
                                value="<%= juego ? juego.precio : '' %>"
                                step="0.01"
                                min="0"
                                required
                            >
                        </div>

                        <div class="form-group">
                            <label for="stock">
                                <i class="fas fa-boxes"></i> Stock *
                            </label>
                            <input 
                                type="number" 
                                id="stock" 
                                name="stock" 
                                value="<%= juego ? juego.stock : 0 %>"
                                min="0"
                                required
                            >
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="imagen">
                            <i class="fas fa-image"></i> Imagen
                        </label>
                        <input 
                            type="file" 
                            id="imagen" 
                            name="imagen" 
                            accept="image/*"
                        >
                        <% if (juego && juego.imagen) { %>
                            <div class="preview-image">
                                <img src="<%= juego.imagen %>" alt="Preview">
                            </div>
                        <% } %>
                    </div>

                    <div class="form-actions">
                        <button type="submit" class="btn btn-success">
                            <i class="fas fa-save"></i> Guardar
                        </button>
                        <a href="/admin/dashboard" class="btn btn-secondary">
                            <i class="fas fa-times"></i> Cancelar
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </main>

    <footer class="footer">
        <p>Lenny - Sistema de gestión de Libros y Juegos de Mesa © 2025</p>
        <p>Desarrollado por: Uriel Marles y Nicanor Gatti</p>
    </footer>

    <script>
        const accion = '<%= accion %>';
        const juegoId = '<%= juego ? juego.id : null %>';
        
        document.getElementById('formJuego').addEventListener('submit', async function(e) {
            e.preventDefault();
            
            const formData = new FormData(this);
            const url = accion === 'crear' ? '/api/juegos' : `/api/juegos/${juegoId}`;
            const method = accion === 'crear' ? 'POST' : 'PUT';
            
            try {
                const response = await fetch(url, {
                    method: method,
                    body: formData
                });
                
                if (response.ok) {
                    alert('Juego guardado exitosamente');
                    window.location.href = '/admin/dashboard';
                } else {
                    const error = await response.json();
                    alert('Error: ' + error.error);
                }
            } catch (error) {
                alert('Error al guardar el juego');
                console.error(error);
            }
        });
    </script>
</body>
</html>