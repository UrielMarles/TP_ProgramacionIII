<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= titulo %></title>
    <link rel="stylesheet" href="/css/admin.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body>
    <nav class="navbar">
        <div class="nav-container">
            <div class="nav-brand">
                <i class="fas fa-book"></i>
                <h1>Lenny Admin</h1>
            </div>
            <ul class="nav-menu">
                <li><a href="/admin/dashboard" class="nav-link active"><i class="fas fa-home"></i> Dashboard</a></li>
                <li><a href="/admin/ventas" class="nav-link"><i class="fas fa-shopping-cart"></i> Ventas</a></li>
                <li><a href="/admin/login" class="nav-link"><i class="fas fa-sign-out-alt"></i> Salir</a></li>
            </ul>
        </div>
    </nav>

    <main class="main-content">
        <div class="container">
            <div class="page-header">
                <h2><i class="fas fa-tachometer-alt"></i> Dashboard</h2>
            </div>

            <!-- Sección Libros -->
            <section class="dashboard-section">
                <div class="section-header">
                    <h3><i class="fas fa-book"></i> Libros</h3>
                    <a href="/admin/libros/nuevo" class="btn btn-success">
                        <i class="fas fa-plus"></i> Agregar Libro
                    </a>
                </div>

                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Imagen</th>
                                <th>Título</th>
                                <th>Autor</th>
                                <th>Género</th>
                                <th>Páginas</th>
                                <th>Precio</th>
                                <th>Stock</th>
                                <th>Estado</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (libros.length > 0) { %>
                                <% libros.forEach(libro => { %>
                                <tr>
                                    <td><%= libro.id %></td>
                                    <td>
                                        <% if (libro.imagen) { %>
                                            <img src="<%= libro.imagen %>" alt="<%= libro.titulo %>" class="table-img">
                                        <% } else { %>
                                            <div class="no-image">Sin imagen</div>
                                        <% } %>
                                    </td>
                                    <td><%= libro.titulo %></td>
                                    <td><%= libro.autor %></td>
                                    <td><%= libro.genero %></td>
                                    <td><%= libro.numeroPaginas %></td>
                                    <td>$<%= libro.precio %></td>
                                    <td><%= libro.stock %></td>
                                    <td>
                                        <% if (libro.activo) { %>
                                            <span class="badge badge-success">Activo</span>
                                        <% } else { %>
                                            <span class="badge badge-danger">Inactivo</span>
                                        <% } %>
                                    </td>
                                    <td>
                                        <div class="action-buttons">
                                            <a href="/admin/libros/editar/<%= libro.id %>" class="btn btn-sm btn-primary" title="Editar">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <% if (libro.activo) { %>
                                                <button onclick="cambiarEstadoLibro('<%= libro.id %>', false)" class="btn btn-sm btn-warning" title="Desactivar">
                                                    <i class="fas fa-ban"></i>
                                                </button>
                                            <% } else { %>
                                                <button onclick="cambiarEstadoLibro('<%= libro.id %>', true)" class="btn btn-sm btn-success" title="Activar">
                                                    <i class="fas fa-check"></i>
                                                </button>
                                            <% } %>
                                        </div>
                                    </td>
                                </tr>
                                <% }); %>
                            <% } else { %>
                                <tr>
                                    <td colspan="10" class="text-center">No hay libros registrados</td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </section>

            <!-- Sección Juegos -->
            <section class="dashboard-section">
                <div class="section-header">
                    <h3><i class="fas fa-dice"></i> Juegos de Mesa</h3>
                    <a href="/admin/juegos/nuevo" class="btn btn-success">
                        <i class="fas fa-plus"></i> Agregar Juego
                    </a>
                </div>

                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Imagen</th>
                                <th>Nombre</th>
                                <th>Categoría</th>
                                <th>Complejidad</th>
                                <th>Jugadores</th>
                                <th>Duración</th>
                                <th>Precio</th>
                                <th>Stock</th>
                                <th>Estado</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (juegos.length > 0) { %>
                                <% juegos.forEach(juego => { %>
                                <tr>
                                    <td><%= juego.id %></td>
                                    <td>
                                        <% if (juego.imagen) { %>
                                            <img src="<%= juego.imagen %>" alt="<%= juego.nombre %>" class="table-img">
                                        <% } else { %>
                                            <div class="no-image">Sin imagen</div>
                                        <% } %>
                                    </td>
                                    <td><%= juego.nombre %></td>
                                    <td><%= juego.categoria %></td>
                                    <td><%= juego.complejidad %></td>
                                    <td><%= juego.minJugadores %>-<%= juego.maxJugadores %></td>
                                    <td><%= juego.duracionMinutos %> min</td>
                                    <td>$<%= juego.precio %></td>
                                    <td><%= juego.stock %></td>
                                    <td>
                                        <% if (juego.activo) { %>
                                            <span class="badge badge-success">Activo</span>
                                        <% } else { %>
                                            <span class="badge badge-danger">Inactivo</span>
                                        <% } %>
                                    </td>
                                    <td>
                                        <div class="action-buttons">
                                            <a href="/admin/juegos/editar/<%= juego.id %>" class="btn btn-sm btn-primary" title="Editar">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <% if (juego.activo) { %>
                                                <button onclick="cambiarEstadoJuego('<%= juego.id %>', false)" class="btn btn-sm btn-warning" title="Desactivar">
                                                    <i class="fas fa-ban"></i>
                                                </button>
                                            <% } else { %>
                                                <button onclick="cambiarEstadoJuego('<%= juego.id %>', true)" class="btn btn-sm btn-success" title="Activar">
                                                    <i class="fas fa-check"></i>
                                                </button>
                                            <% } %>
                                        </div>
                                    </td>
                                </tr>
                                <% }); %>
                            <% } else { %>
                                <tr>
                                    <td colspan="11" class="text-center">No hay juegos registrados</td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </section>
        </div>
    </main>

    <footer class="footer">
        <p>Lenny - Sistema de gestión de Libros y Juegos de Mesa © 2025</p>
        <p>Desarrollado por: Uriel Marles</p>
    </footer>

    <!-- Modal de confirmación -->
    <div id="modalConfirmar" class="modal">
        <div class="modal-content">
            <h3 id="modalTitulo">Confirmar acción</h3>
            <p id="modalMensaje">¿Está seguro de realizar esta acción?</p>
            <div class="modal-buttons">
                <button class="btn btn-secondary" onclick="cerrarModal()">Cancelar</button>
                <button class="btn btn-primary" id="btnConfirmar">Confirmar</button>
            </div>
        </div>
    </div>

    <script src="/js/admin.js"></script>
</body>
</html>