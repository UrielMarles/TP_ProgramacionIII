<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= titulo %></title>
    <link rel="stylesheet" href="/css/admin.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body class="login-page">
    <div class="login-container">
        <div class="login-card">
            <div class="login-header">
                <img src="/images/logo.svg" alt="Lenny Logo" class="login-logo">
                <h1>Lenny Admin</h1>
                <p>Panel de Administración</p>
            </div>

            <% if (error) { %>
            <div class="alert alert-error">
                <i class="fas fa-exclamation-circle"></i>
                <%= error %>
            </div>
            <% } %>

            <form action="/admin/login" method="POST" class="login-form">
                <div class="form-group">
                    <label for="correo">
                        <i class="fas fa-envelope"></i> Correo electrónico
                    </label>
                    <input 
                        type="email" 
                        id="correo" 
                        name="correo" 
                        placeholder="ingrese su correo electrónico" 
                        required
                    >
                </div>

                <div class="form-group">
                    <label for="contraseña">
                        <i class="fas fa-lock"></i> Contraseña
                    </label>
                    <input 
                        type="password" 
                        id="contraseña" 
                        name="contraseña" 
                        placeholder="ingrese su contraseña" 
                        required
                    >
                </div>

                <button type="submit" class="btn btn-primary btn-block">
                    <i class="fas fa-sign-in-alt"></i> Iniciar Sesión
                </button>

                <button type="button" class="btn btn-secondary btn-block" id="btnAccesoRapido">
                    <i class="fas fa-bolt"></i> Acceso Rápido
                </button>
            </form>

            <div class="login-footer">
                <p>Desarrollado por: Uriel Marles</p>
            </div>
        </div>
    </div>

    <script>
        // Botón de acceso rápido
        document.getElementById('btnAccesoRapido').addEventListener('click', function() {
            document.getElementById('correo').value = 'admin@lenny.com';
            document.getElementById('contraseña').value = 'admin123';
        });
    </script>
</body>
</html>